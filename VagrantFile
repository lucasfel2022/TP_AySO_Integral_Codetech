# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|

  # Configuración de la máquina "Testing" con Ubuntu
  config.vm.define "Testing" do |testing|
    testing.vm.box = "ubuntu/jammy64"
    testing.vm.hostname = "Testing"
    testing.vm.network "private_network", ip: "192.168.56.4"
    
    # Carpeta compartida (ruta absoluta)
    testing.vm.synced_folder 'C:/Users/user/SO/TP_AySO_Integral_Codetech/compartido_Testing', '/home/vagrant/compartido', 
      owner: 'vagrant', group: 'vagrant' 

    # SSH key privada
    testing.ssh.insert_key = true

    # Agregar discos
    testing.vm.disk :disk, size: "10GB", name: "#{testing.vm.hostname}_extra_storage"
    testing.vm.disk :disk, size: "5GB", name: "#{testing.vm.hostname}_extra_storage2"
    testing.vm.disk :disk, size: "2GB", name: "#{testing.vm.hostname}_extra_storage3"

    # Configuración del proveedor VirtualBox
    testing.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.name = "Testing"
      vb.cpus = 1
      vb.linked_clone = true
      vb.customize ['modifyvm', :id, '--graphicscontroller', 'vmsvga']      
    end    

    # Provisión de scripts (ruta absoluta correcta)
    testing.vm.provision "shell", path: "C:/Users/user/SO/TP_AySO_Integral_Codetech/script_Enable_ssh_password.sh"
    testing.vm.provision "shell", path: "C:/Users/user/SO/TP_AySO_Integral_Codetech/instala_paquetes.sh"
  end
  
  # Configuración de la máquina "Produccion" con Fedora
  config.vm.define "Produccion" do |produccion|
    produccion.vm.box = "generic/rhel9"
    produccion.vm.hostname = "Produccion"
    produccion.vm.network "private_network", ip: "192.168.56.5"
    
    # Carpeta compartida (ruta absoluta)
    produccion.vm.synced_folder 'C:/Users/user/SO/TP_AySO_Integral_Codetech/compartido_Produccion', '/home/vagrant/compartido'

    # SSH key privada
    produccion.ssh.insert_key = true

    # Agregar discos
    produccion.vm.disk :disk, size: "10GB", name: "#{produccion.vm.hostname}_extra_storage"
    produccion.vm.disk :disk, size: "5GB", name: "#{produccion.vm.hostname}_extra_storage2"
    produccion.vm.disk :disk, size: "2GB", name: "#{produccion.vm.hostname}_extra_storage3"

    # Configuración del proveedor VirtualBox
    produccion.vm.provider "virtualbox" do |vb|
      vb.memory = "1024"
      vb.name = "Produccion"
      vb.cpus = 1
      vb.linked_clone = true
      vb.customize ['modifyvm', :id, '--graphicscontroller', 'vmsvga']
    end
    
    # Provisión de scripts (ruta absoluta correcta)
    produccion.vm.provision "shell", path: "C:/Users/user/SO/TP_AySO_Integral_Codetech/script_Enable_ssh_password.sh"
  end
end


